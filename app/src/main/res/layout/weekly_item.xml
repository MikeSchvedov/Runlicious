<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/session_item_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/weekly_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="week date"
                android:textColor="#F8F8F8"
                android:textSize="16sp"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/week_duration"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/happy_monkey"
                android:gravity="end"
        android:layout_marginTop="5dp"
                android:text="--"

                android:textStyle="bold"
                android:textColor="#F7AA51E7"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:src="@drawable/duration_ic"/>

            <TextView
                android:id="@+id/week_distance"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/happy_monkey"
                android:paddingEnd="15dp"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:text="--"
                android:textColor="#F7AA51E7"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/distance_ic"/>


            <TextView
                android:id="@+id/week_calories"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/happy_monkey"
                android:gravity="end"
              android:paddingEnd="15dp"
                android:layout_marginTop="5dp"
                android:text="--"

                android:textColor="#F7AA51E7"

                android:textSize="20sp" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:paddingEnd="5dp"
                android:src="@drawable/fire_ic"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
