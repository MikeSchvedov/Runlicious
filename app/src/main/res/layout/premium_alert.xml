<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#EB151212"
    android:gravity="bottom"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/button_dialog_background"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">


            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="HH"
                android:inputType="number"
                android:textColor="#FFF"
                android:id="@+id/input_hours_edittext"
                android:textColorHint="#FFF"
                android:layout_gravity="center"
                android:gravity="center"/>

        <TextView

            android:layout_width="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="#FFF"
            android:text=":"/>

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="MM"
                android:inputType="number"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:id="@+id/input_minutes_edittext"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView

                android:layout_width="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="50dp"
                android:textColor="#FFF"
                android:text=":"/>


            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColorHint="#FFF"
                android:hint="SS"
                android:textColor="#FFF"
                android:id="@+id/input_seconds_edittext"
                android:layout_gravity="center"
                android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_btn_time_picker"
            android:text="Cancel"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:background="@drawable/button_dialog_background"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/confirm_btn_time_picker"
            android:text="Confirm"

            android:textColor="#FFF"
            android:background="@drawable/button_dialog_background"
            >
        </Button>


    </LinearLayout>




</LinearLayout>